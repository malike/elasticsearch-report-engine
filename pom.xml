    <repository>
      <id>maven</id>
      <name>mvn</name>
      <url>http://central.maven.org/maven2/</url>
    </repository>
    <repository>
      <id>jasper</id>
      <url>http://jaspersoft.artifactoryonline.com/jaspersoft/jaspersoft-repo/</url>
    </repository>
